# Relayer Service Environment Variables
# Copy this to .env and fill in your values

# CRITICAL SECURITY: Never commit the actual .env file!
# Keep these values secret and secure

# Relayer wallet private key (with 0x prefix)
# This wallet will pay for gas fees
RELAYER_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# Blockchain RPC URL
RPC_URL=https://rpc.mantle.xyz

# Your deployed gasless relayer contract address
GASLESS_CONTRACT_ADDRESS=0x742d35cc6B7e4CE7c56F1Ba2e0fB3e00e2Fb0E9b

# Server configuration
PORT=3001
NODE_ENV=production

# Security configuration
ALLOWED_ORIGINS=https://yourdapp.com,https://app.yourdomain.com

# Database URL (for transaction logging)
DATABASE_URL=postgresql://user:password@localhost:5432/relayer_db

# Monitoring and alerts
SENTRY_DSN=your_sentry_dsn
SLACK_WEBHOOK_URL=your_slack_webhook

# Rate limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_DAILY_VOLUME_USD=10000

# Gas price configuration
MAX_GAS_PRICE_GWEI=50
GAS_PRICE_MULTIPLIER=1.2